@inherits LayoutComponentBase
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime
@inject IVisualElementsService VisualElements
@using SubashaVentures.Services.VisualElements
@using SubashaVentures.Domain.Enums

<div class="checkout-layout">
    <header class="checkout-header">
        <div class="checkout-header-content">
            <button class="back-button" @onclick="GoBack" aria-label="Go back">
                <span class="back-icon-wrap">@((MarkupString)_backArrowSvg)</span>
                <span class="back-text">Back</span>
            </button>

            <div class="brand-logo-checkout">
                <h1 class="brand-name" @onclick='() => Navigation.NavigateTo("")'>SubashaVentures</h1>
            </div>

            <div class="secure-badge-header">
                <span class="lock-icon-wrap">@((MarkupString)_lockSvg)</span>
                <span class="secure-text">Secure Checkout</span>
            </div>
        </div>
    </header>

    <main class="checkout-main">
        @Body
    </main>

    <footer class="checkout-footer">
        <div class="checkout-footer-content">
            <p class="copyright">Â© 2026 SubashaVentures. All rights reserved.</p>
            <div class="security-badges">
                <span class="badge">
                    <span class="badge-icon">@((MarkupString)_lockSmSvg)</span>
                    SSL Secured
                </span>
                <span class="badge">
                    <span class="badge-icon">@((MarkupString)_cardSmSvg)</span>
                    Safe Payment
                </span>
            </div>
        </div>
    </footer>
</div>

@code {
    private string _backArrowSvg = string.Empty;
    private string _lockSvg = string.Empty;
    private string _lockSmSvg = string.Empty;
    private string _cardSmSvg = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            _backArrowSvg = VisualElements.GenerateSvg(
                "<path d='M20 11H7.83l5.59-5.59L12 4l-8 8 8 8 1.41-1.41L7.83 13H20v-2z' fill='currentColor'/>",
                18, 18, "0 0 24 24"
            );

            _lockSvg = VisualElements.GenerateSvg(
                "<path d='M18 8h-1V6c0-2.76-2.24-5-5-5S7 3.24 7 6v2H6c-1.1 0-2 .9-2 2v10c0 1.1.9 2 2 2h12c1.1 0 2-.9 2-2V10c0-1.1-.9-2-2-2zm-6 9c-1.1 0-2-.9-2-2s.9-2 2-2 2 .9 2 2-.9 2-2 2zm3.1-9H8.9V6c0-1.71 1.39-3.1 3.1-3.1 1.71 0 3.1 1.39 3.1 3.1v2z' fill='currentColor'/>",
                18, 18, "0 0 24 24"
            );

            _lockSmSvg = VisualElements.GenerateSvg(
                "<path d='M18 8h-1V6c0-2.76-2.24-5-5-5S7 3.24 7 6v2H6c-1.1 0-2 .9-2 2v10c0 1.1.9 2 2 2h12c1.1 0 2-.9 2-2V10c0-1.1-.9-2-2-2zm-6 9c-1.1 0-2-.9-2-2s.9-2 2-2 2 .9 2 2-.9 2-2 2zm3.1-9H8.9V6c0-1.71 1.39-3.1 3.1-3.1 1.71 0 3.1 1.39 3.1 3.1v2z' fill='currentColor'/>",
                13, 13, "0 0 24 24"
            );

            _cardSmSvg = VisualElements.GenerateSvg(
                "<path d='M20 4H4c-1.11 0-2 .89-2 2v12c0 1.11.89 2 2 2h16c1.11 0 2-.89 2-2V6c0-1.11-.89-2-2-2zm0 14H4v-6h16v6zm0-10H4V6h16v2z' fill='currentColor'/>",
                13, 13, "0 0 24 24"
            );
        }
        catch
        {
            // SVGs fall back to empty strings gracefully
        }
    }

    private void GoBack()
    {
        JSRuntime.InvokeVoidAsync("history.back");
    }
}
