@inherits LayoutComponentBase
@using SubashaVentures.Layout.Admin

<div class="admin-layout">
    <!-- Navigation Menu -->
    <AdminNavMenu @ref="navMenu" />
    
    <!-- Mobile Menu Toggle Button -->
    <button class="mobile-menu-toggle" @onclick="OpenMobileMenu">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
            <path d="M3 6H21M3 12H21M3 18H21" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
        </svg>
    </button>

    <!-- Main Content Area -->
    <div class="admin-main">
        <!-- Top Header Bar -->
        <header class="admin-header">
            <div class="header-left">
                <h1 class="page-title">@PageTitle</h1>
            </div>
            
            <div class="header-right">
                <button class="header-btn search-btn" title="Search">
                    <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
                        <circle cx="9" cy="9" r="6" stroke="currentColor" stroke-width="1.5"/>
                        <path d="M14 14L18 18" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
                    </svg>
                </button>
                
                <button class="header-btn notifications-btn" title="Notifications">
                    <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
                        <path d="M15 7C15 5.67392 14.4732 4.40215 13.5355 3.46447C12.5979 2.52678 11.3261 2 10 2C8.67392 2 7.40215 2.52678 6.46447 3.46447C5.52678 4.40215 5 5.67392 5 7C5 13 2 15 2 15H18C18 15 15 13 15 7Z" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                        <path d="M11.5 18C11.3019 18.3031 11.0239 18.5547 10.6921 18.7295C10.3604 18.9044 9.98574 18.9965 9.60499 18.9965C9.22424 18.9965 8.84963 18.9044 8.51785 18.7295C8.18607 18.5547 7.90814 18.3031 7.71 18" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                    <span class="notification-dot"></span>
                </button>
                
                <div class="admin-user">
                    <span class="user-name">Admin User</span>
                    <div class="user-avatar">A</div>
                </div>
            </div>
        </header>

        <!-- Page Content -->
        <main class="admin-content">
            @Body
        </main>
    </div>
</div>

@code {
    private string PageTitle = "Dashboard";
    private AdminNavMenu? navMenu;

    private void OpenMobileMenu()
    {
        navMenu?.OpenMobileNav();
    }
}