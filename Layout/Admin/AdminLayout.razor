@inherits LayoutComponentBase
@using SubashaVentures.Layout.Admin
@using Blazored.Toast.Configuration
@using Blazored.Toast

<BlazoredToasts Position="ToastPosition.TopRight"
                Timeout="5"
                IconType="IconType.FontAwesome"
                SuccessClass="success-toast"
                ErrorClass="error-toast"
                InfoClass="info-toast"
                WarningClass="warning-toast"
                ShowProgressBar="true"
                CloseButtonContent="âœ•" />

<div class="admin-layout">
    <!-- Navigation Menu -->
    <AdminNavMenu @ref="navMenu" />
    
    <!-- Mobile Menu Toggle Button -->
    <button class="mobile-menu-toggle" @onclick="OpenMobileMenu">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
            <path d="M3 6H21M3 12H21M3 18H21" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
        </svg>
    </button>

    <!-- Main Content Area -->
    <div class="admin-main">
        <!-- Simple Top Header Bar -->
        <header class="admin-header">
            <h1 class="page-title">@PageTitle</h1>
        </header>

        <!-- Page Content -->
        <main class="admin-content">
            @Body
        </main>
    </div>
</div>

@code {
    private string PageTitle = "Dashboard";
    private AdminNavMenu? navMenu;

    private void OpenMobileMenu()
    {
        navMenu?.OpenMobileNav();
    }
}