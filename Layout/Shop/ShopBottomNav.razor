@* ShopBottomNav.razor - Mobile bottom navigation *@

<div class="shop-bottom-navigation">
    <button class="bottom-nav-item @(activeTab == "home" ? "active" : "")" 
            @onclick='() => NavigateToTab("home")'>
        <span class="nav-icon">ğŸ </span>
        <span class="nav-label">Home</span>
    </button>

    <button class="bottom-nav-item @(activeTab == "categories" ? "active" : "")" 
            @onclick='() => NavigateToTab("categories")'>
        <span class="nav-icon">ğŸ“¦</span>
        <span class="nav-label">Categories</span>
    </button>

    <button class="bottom-nav-item @(activeTab == "deals" ? "active" : "")" 
            @onclick='() => NavigateToTab("deals")'>
        <span class="nav-icon">ğŸ”¥</span>
        <span class="nav-label">Deals</span>
    </button>

    <button class="bottom-nav-item cart-nav @(activeTab == "cart" ? "active" : "")" 
            @onclick='() => NavigateToTab("cart")'>
        <span class="nav-icon">
            ğŸ›’
            @if (cartCount > 0)
            {
                <span class="nav-badge">@cartCount</span>
            }
        </span>
        <span class="nav-label">Cart</span>
    </button>

    <button class="bottom-nav-item @(activeTab == "account" ? "active" : "")" 
            @onclick='() => NavigateToTab("account")'>
        <span class="nav-icon">ğŸ‘¤</span>
        <span class="nav-label">Account</span>
    </button>
</div>

@code {
    private string activeTab = "home";
    private int cartCount = 3;

    private void NavigateToTab(string tab)
    {
        activeTab = tab;
        
        // Navigate to appropriate page
        switch (tab)
        {
            case "home":
                Console.WriteLine("Navigate to: /");
                break;
            case "categories":
                Console.WriteLine("Navigate to: /shop/categories");
                break;
            case "deals":
                Console.WriteLine("Navigate to: /shop/deals");
                break;
            case "cart":
                Console.WriteLine("Navigate to: /cart");
                break;
            case "account":
                Console.WriteLine("Navigate to: /account");
                break;
        }
    }
}
