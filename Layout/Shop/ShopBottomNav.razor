@inject NavigationManager NavigationManager

<div class="shop-bottom-nav">
    <button class="bottom-nav-btn @(IsActive("/shop") ? "active" : "")" 
            @onclick='() => NavigateTo("/shop")'>
        <span class="nav-icon">ğŸ </span>
