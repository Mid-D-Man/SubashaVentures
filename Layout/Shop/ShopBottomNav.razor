    </button>

    <button class="bottom-nav-btn @(IsActive("/categories") ? "active" : "")" 
            @onclick='() => NavigateTo("/categories")'>
        <span class="nav-icon">ğŸ“‚</span>
        <span class="nav-label">Categories</span>
    </button>

    <button class="bottom-nav-btn @(IsActive("/cart") ? "active" : "")" 
            @onclick='() => NavigateTo("/cart")'>
        <span class="nav-icon">ğŸ›’</span>
        <span class="nav-label">Cart</span>
        @if (CartItemCount > 0)
        {
            <span class="cart-badge">@CartItemCount</span>
        }
    </button>

    <button class="bottom-nav-btn @(IsActive("/profile") ? "active" : "")" 
            @onclick='() => NavigateTo("/profile")'>
        <span class="nav-icon">ğŸ‘¤</span>
        <span class="nav-label">Profile</span>
    </button>
</div>

@code {
    [Parameter] public int CartItemCount { get; set; } = 0;

    private void NavigateTo(string path)
    {
        NavigationManager.NavigateTo(path);
    }

    private bool IsActive(string path)
    {
        return NavigationManager.Uri.Contains(path);
    }
}
