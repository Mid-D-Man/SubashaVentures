@using Microsoft.AspNetCore.Components.Authorization
@using SubashaVentures.Services.Supabase
@using SubashaVentures.Components.Shared.Modals

@inherits LayoutComponentBase
@inject INavigationService NavService
@inject AuthenticationStateProvider AuthStateProvider
@inject ISupabaseAuthService AuthService
@inject NavigationManager NavigationManager
@inject ILogger<LandingPageLayout> Logger
@implements IDisposable

<div class="main-layout">
    <!-- Top Section - Navigation (Fixed Header)  -->
    <header class="layout-header">
        <TopNavigation />
    </header>  

    <!-- Main Content Section (Scrollable) -->
    <main class="layout-content">
        <div class="page-content">
            @Body
            
            <!-- Footer Section - Part of page content -->
            <footer class="page-footer">
                <FooterSection />
            </footer>
        </div>
    </main>
    
    <!-- Side Panel Component - Global Level -->
    <SidePanel IsOpen="@isSidePanelOpen"
               IsOpenChanged="@HandleSidePanelToggle"
               SearchQuery="@searchQuery"
               SearchQueryChanged="@OnSearchQueryChanged"
               IsLoggedIn="@isLoggedIn"
               UserName="@userName"
               UserEmail="@userEmail"
               OnActionClick="@HandleActionClick"
               OnNavigate="@HandleNavigate"
               OnSearch="@HandleSearch"/>
    
    <!-- ‚úÖ NEW: Logout Confirmation Popup -->
    <ConfirmationPopup IsOpen="@showLogoutConfirmation"
                       Title="Sign Out"
                       Message="Are you sure you want to sign out?"
                       Variant="ConfirmationPopup.ConfirmationVariant.Warning"
                       ConfirmButtonText="Sign Out"
                       CancelButtonText="Cancel"
                       CloseOnOverlayClick="true"
                       IsProcessing="@isSigningOut"
                       OnConfirm="@ConfirmLogout"
                       OnCancel="@CancelLogout"
                       OnClose="@CancelLogout" />
</div>

@code {
    private bool isSidePanelOpen = false;
    private string searchQuery = "";
    
    // ‚úÖ FIXED: Authentication state from Supabase
    private bool isLoggedIn = false;
    private string userName = "";
    private string userEmail = "";
    
    // ‚úÖ NEW: Logout confirmation state
    private bool showLogoutConfirmation = false;
    private bool isSigningOut = false;

    protected override async Task OnInitializedAsync()
    {
        // Subscribe to navigation service events
        NavService.SidePanelStateChanged += OnSidePanelStateChanged;
        NavService.SearchQueryChanged += OnSearchQueryChangedFromService;
        
        // Initialize state from service
        isSidePanelOpen = NavService.IsSidePanelOpen;
        searchQuery = NavService.SearchQuery;
        
        // ‚úÖ NEW: Subscribe to auth state changes
        AuthStateProvider.AuthenticationStateChanged += OnAuthenticationStateChanged;
        
        // ‚úÖ NEW: Load initial authentication state
        await LoadAuthenticationState();
    }

    // ‚úÖ NEW: Load authentication state from Supabase
    private async Task LoadAuthenticationState()
    {
        try
        {
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            var user = authState.User;
            
            isLoggedIn = user?.Identity?.IsAuthenticated ?? false;
            
            if (isLoggedIn)
            {
                userEmail = user?.FindFirst(System.Security.Claims.ClaimTypes.Email)?.Value ?? "";
                
                var firstName = user?.FindFirst(System.Security.Claims.ClaimTypes.GivenName)?.Value ?? "";
                var lastName = user?.FindFirst(System.Security.Claims.ClaimTypes.Surname)?.Value ?? "";
                
                userName = !string.IsNullOrEmpty(firstName) 
                    ? $"{firstName} {lastName}".Trim() 
                    : userEmail.Split('@')[0];
                
                Logger.LogInformation("‚úÖ User authenticated: {Email}", userEmail);
            }
            else
            {
                userName = "";
                userEmail = "";
                Logger.LogInformation("‚ÑπÔ∏è User not authenticated");
            }
            
            StateHasChanged();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading authentication state");
            isLoggedIn = false;
            userName = "";
            userEmail = "";
        }
    }

    // ‚úÖ NEW: Handle authentication state changes
    private async void OnAuthenticationStateChanged(Task<AuthenticationState> task)
    {
        try
        {
            Logger.LogInformation("üîî Authentication state changed, reloading...");
            await LoadAuthenticationState();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error handling authentication state change");
        }
    }

    private void OnSidePanelStateChanged(object? sender, bool isOpen)
    {
        isSidePanelOpen = isOpen;
        StateHasChanged();
    }

    private void OnSearchQueryChangedFromService(object? sender, string query)
    {
        searchQuery = query;
        StateHasChanged();
    }

    private async Task HandleSidePanelToggle(bool isOpen)
    {
        NavService.SetSidePanelState(isOpen);
        await Task.CompletedTask;
    }

    private async Task OnSearchQueryChanged(string query)
    {
        NavService.UpdateSearchQuery(query);
        await Task.CompletedTask;
    }

    private async Task HandleActionClick(SidePanel.ActionType action)
    {
        switch (action)
        {
            case SidePanel.ActionType.SignIn:
                NavigationManager.NavigateTo("/signin");
                Logger.LogInformation("Navigate to: /signin");
                break;
            case SidePanel.ActionType.SignUp:
                NavigationManager.NavigateTo("/signup");
                Logger.LogInformation("Navigate to: /signup");
                break;
            case SidePanel.ActionType.Profile:
                NavigationManager.NavigateTo("/user/settings");
                Logger.LogInformation("Navigate to: /user/settings");
                break;
            case SidePanel.ActionType.Logout:
                // ‚úÖ UPDATED: Show confirmation popup instead of logging out directly
                await HandleLogout();
                break;
        }
        await Task.CompletedTask;
    }

    private async Task HandleNavigate(string url)
    {
        NavigationManager.NavigateTo(url);
        Logger.LogInformation("Navigate to: {Url}", url);
        await Task.CompletedTask;
    }

    private async Task HandleSearch(string query)
    {
        if (!string.IsNullOrWhiteSpace(query))
        {
            NavigationManager.NavigateTo($"/search?q={Uri.EscapeDataString(query)}");
            Logger.LogInformation("Search for: {Query}", query);
        }
        await Task.CompletedTask;
    }

    // ‚úÖ UPDATED: Show confirmation popup
    private async Task HandleLogout()
    {
        try
        {
            Logger.LogInformation("üìã Showing logout confirmation for: {Email}", userEmail);
            
            // Close side panel first
            NavService.SetSidePanelState(false);
            
            // Show confirmation popup
            showLogoutConfirmation = true;
            StateHasChanged();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error showing logout confirmation");
        }
        
        await Task.CompletedTask;
    }

    // ‚úÖ NEW: Confirm logout - actually sign out
    private async Task ConfirmLogout()
    {
        try
        {
            isSigningOut = true;
            StateHasChanged();
            
            Logger.LogInformation("üî¥ Signing out user: {Email}", userEmail);
            
            // ‚úÖ CRITICAL: Actually call Supabase sign out
            var success = await AuthService.SignOutAsync();
            
            if (success)
            {
                Logger.LogInformation("‚úÖ User signed out successfully");
                
                // Clear local state
                isLoggedIn = false;
                userName = "";
                userEmail = "";
                
                // Close confirmation popup
                showLogoutConfirmation = false;
                
                // Redirect to home page
                NavigationManager.NavigateTo("/", forceLoad: true);
            }
            else
            {
                Logger.LogError("‚ùå Sign out failed");
                // TODO: Show error message to user
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error during logout");
            // TODO: Show error message to user
        }
        finally
        {
            isSigningOut = false;
            StateHasChanged();
        }
    }

    // ‚úÖ NEW: Cancel logout
    private async Task CancelLogout()
    {
        try
        {
            Logger.LogInformation("‚ùå Logout cancelled");
            showLogoutConfirmation = false;
            StateHasChanged();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error cancelling logout");
        }
        
        await Task.CompletedTask;
    }

    public void Dispose()
    {
        // Unsubscribe from events
        NavService.SidePanelStateChanged -= OnSidePanelStateChanged;
        NavService.SearchQueryChanged -= OnSearchQueryChangedFromService;
        AuthStateProvider.AuthenticationStateChanged -= OnAuthenticationStateChanged;
    }
}
