@using SubashaVentures.Components.Shared.Buttons

<footer class="footer-section">
    <!-- Footer Content Container -->
    <div class="footer-container">
        <!-- Top Footer - Main Content -->
        <div class="footer-top">
            <!-- Brand Column -->
            <div class="footer-column brand-column">
                <div class="footer-brand">
                    <div class="brand-logo">
                        <span class="brand-icon">🌟</span>
                        <span class="brand-name">Subasha Ventures</span>
                    </div>
                    <p class="brand-description">
                        Your premium destination for quality clothing and home goods. 
                        Discover style that speaks to you.
                    </p>
                    <div class="social-links">
                        <a href="#" class="social-link" aria-label="Facebook">📘</a>
                        <a href="#" class="social-link" aria-label="Instagram">📷</a>
                        <a href="#" class="social-link" aria-label="Twitter">🐦</a>
                        <a href="#" class="social-link" aria-label="LinkedIn">💼</a>
                    </div>
                </div>
            </div>

            <!-- Quick Links Column -->
            <div class="footer-column">
                <h4 class="footer-title">Quick Links</h4>
                <ul class="footer-links">
                    <li><a href="/">Home</a></li>
                    <li><a href="/shop">Shop All</a></li>
                    <li><a href="/categories">Categories</a></li>
                    <li><a href="/new-arrivals">New Arrivals</a></li>
                    <li><a href="/sale">Sale</a></li>
                </ul>
            </div>

            <!-- Categories Column -->
            <div class="footer-column">
                <h4 class="footer-title">Categories</h4>
                <ul class="footer-links">
                    <li><a href="/men">Men's Clothing</a></li>
                    <li><a href="/women">Women's Clothing</a></li>
                    <li><a href="/children">Children's Wear</a></li>
                    <li><a href="/baby">Baby Essentials</a></li>
                    <li><a href="/home">Home & Living</a></li>
                </ul>
            </div>

            <!-- Customer Service Column -->
            <div class="footer-column">
                <h4 class="footer-title">Customer Care</h4>
                <ul class="footer-links">
                    <li><a href="/contact">Contact Us</a></li>
                    <li><a href="/help">Help Center</a></li>
                    <li><a href="/shipping">Shipping Info</a></li>
                    <li><a href="/returns">Returns & Exchanges</a></li>
                    <li><a href="/size-guide">Size Guide</a></li>
                </ul>
            </div>

            <!-- Newsletter Column -->
            <div class="footer-column newsletter-column">
                <h4 class="footer-title">Stay Connected</h4>
                <p class="newsletter-description">
                    Subscribe to get special offers, free giveaways, and updates.
                </p>
                <div class="newsletter-form">
                    <div class="input-group">
                        <input type="email" placeholder="Enter your email" class="newsletter-input" />
                        <PrimaryButton class="newsletter-btn">
                            Subscribe
                        </PrimaryButton>
                    </div>
                </div>
                <div class="contact-info">
                    <div class="contact-item">
                        <span class="contact-icon">📞</span>
                        <span>+1 (555) 123-4567</span>
                    </div>
                    <div class="contact-item">
                        <span class="contact-icon">📧</span>
                        <span>hello@subashaventures.com</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Bottom Footer - Legal -->
        <div class="footer-bottom">
            <div class="footer-legal">
                <p class="copyright">
                    © 2024 SubashaVentures. All rights reserved.
                </p>
                <div class="legal-links">
                    <a href="/privacy">Privacy Policy</a>
                    <a href="/terms">Terms of Service</a>
                    <a href="/cookies">Cookie Policy</a>
                </div>
            </div>
            <div class="payment-methods">
                <span class="payment-label">We Accept:</span>
                <div class="payment-icons">
                    <span class="payment-icon">💳</span>
                    <span class="payment-icon">🏦</span>
                    <span class="payment-icon">💰</span>
                    <span class="payment-icon">📱</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Scroll to Top Button -->
    <PrimaryButton class="@ScrollToTopClass" @onclick="ScrollToTop">
        <span class="scroll-icon">⬆️</span>
    </PrimaryButton>

</footer>

