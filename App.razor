@* App.razor - UPDATED WITH OAUTH CALLBACK HANDLING *@
@using Microsoft.AspNetCore.Components.Authorization
@using SubashaVentures.Services.Supabase
@using SubashaVentures.Services.Storage
@inject ISupabaseAuthService AuthService
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager NavigationManager
@inject IBlazorAppLocalStorageService LocalStorage
@inject ILogger<App> Logger

<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(App).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <Authorizing>
                    <div class="app-loading-container">
                        <div class="app-loading-content">
                            <div class="app-spinner"></div>
                            <h3 class="app-loading-title">Authorizing</h3>
                            <p class="app-loading-text">Please wait while we verify your credentials...</p>
                        </div>
                    </div>
                </Authorizing>
                <NotAuthorized>
                    @if (context.User.Identity?.IsAuthenticated ?? false)
                    {
                        <div class="app-error-container">
                            <div class="app-error-content">
                                <div class="app-error-icon">üîí</div>
                                <h3 class="app-error-title">Access Denied</h3>
                                <p class="app-error-text">You don't have permission to access this page.</p>
                                <button class="app-error-button" @onclick="NavigateToHome">
                                    Return to Home
                                </button>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="app-error-container">
                            <div class="app-error-content">
                                <div class="app-error-icon">üîê</div>
                                <h3 class="app-error-title">Sign In Required</h3>
                                <p class="app-error-text">Please sign in to access this page.</p>
                                <button class="app-error-button" @onclick="NavigateToSignIn">
                                    Sign In
                                </button>
                            </div>
                        </div>
                    }
                </NotAuthorized>
            </AuthorizeRouteView>
            <FocusOnNavigate RouteData="@routeData" Selector="h1" />
        </Found>
        <NotFound>
            <PageTitle>Not found</PageTitle>
            <LayoutView Layout="@typeof(MainLayout)">
                <div class="app-error-container">
                    <div class="app-error-content">
                        <div class="app-error-icon">üîç</div>
                        <h3 class="app-error-title">Page Not Found</h3>
                        <p class="app-error-text">Sorry, we couldn't find the page you're looking for.</p>
                        <button class="app-error-button" @onclick="NavigateToHome">
                            Return to Home
                        </button>
                    </div>
                </div>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>

@code {
    private bool _isProcessingOAuth = false;

    protected override async Task OnInitializedAsync()
    {
        // ‚úÖ CRITICAL: Check for OAuth callback on app initialization
        await CheckForOAuthCallbackAsync();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            // Give OAuth a moment to process if needed
            if (_isProcessingOAuth)
            {
                await Task.Delay(1000);
                StateHasChanged();
            }
        }
    }

    /// <summary>
    /// Check if this is an OAuth callback and handle it
    /// </summary>
    private async Task CheckForOAuthCallbackAsync()
    {
        try
        {
            var uri = new Uri(NavigationManager.Uri);
            var fragment = uri.Fragment;

            // Check for OAuth callback (access_token or error in fragment)
            if (!string.IsNullOrEmpty(fragment) && 
                (fragment.Contains("access_token") || fragment.Contains("error")))
            {
                _isProcessingOAuth = true;
                
                Logger.LogInformation("OAuth callback detected in App.razor");
                
                // Wait for Supabase to process the callback
                await Task.Delay(1500);

                // Check if user is now authenticated
                var authState = await AuthStateProvider.GetAuthenticationStateAsync();
                var isAuthenticated = authState.User?.Identity?.IsAuthenticated ?? false;

                if (isAuthenticated)
                {
                    Logger.LogInformation("‚úì OAuth authentication successful");

                    // Notify auth state changed
                    if (AuthStateProvider is SupabaseAuthStateProvider provider)
                    {
                        provider.NotifyAuthenticationStateChanged();
                    }

                    // Check for stored return URL
                    string? returnUrl = null;
                    try
                    {
                        returnUrl = await LocalStorage.GetItemAsync<string>("oauth_return_url");
                        if (!string.IsNullOrEmpty(returnUrl))
                        {
                            await LocalStorage.RemoveItemAsync("oauth_return_url");
                        }
                    }
                    catch (Exception ex)
                    {
                        Logger.LogWarning(ex, "Failed to retrieve OAuth return URL");
                    }

                    // Clean up URL (remove hash fragment)
                    var cleanUrl = uri.GetLeftPart(UriPartial.Path);
                    
                    // Navigate to return URL or home
                    var destination = !string.IsNullOrEmpty(returnUrl) ? returnUrl : "/";
                    
                    Logger.LogInformation("Redirecting after OAuth to: {Destination}", destination);
                    
                    // Use JavaScript to replace URL without fragment, then navigate
                    NavigationManager.NavigateTo(destination, forceLoad: false);
                }
                else
                {
                    Logger.LogWarning("OAuth callback processed but user not authenticated");
                    
                    // Navigate to sign-in with error
                    NavigationManager.NavigateTo("/signin?error=oauth_failed", forceLoad: false);
                }

                _isProcessingOAuth = false;
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error checking for OAuth callback");
            _isProcessingOAuth = false;
        }
    }

    private void NavigateToHome()
    {
        NavigationManager.NavigateTo("/", forceLoad: false);
    }

    private void NavigateToSignIn()
    {
        var returnUrl = NavigationManager.Uri.Replace(NavigationManager.BaseUri, "/");
        var encodedReturnUrl = Uri.EscapeDataString(returnUrl);
        NavigationManager.NavigateTo($"/signin?returnUrl={encodedReturnUrl}", forceLoad: false);
    }
}
