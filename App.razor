@* App.razor - WHITE FLASH FIX *@
@using Microsoft.AspNetCore.Components.Authorization
@implements IDisposable
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager NavigationManager
@inject ILogger<App> Logger
@inject IJSRuntime JSRuntime

<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(App).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <Authorizing>
                    <div class="app-loading-container">
                        <div class="app-loading-content">
                            <div class="app-spinner"></div>
                            <h3 class="app-loading-title">Authorizing</h3>
                            <p class="app-loading-text">Please wait while we verify your credentials...</p>
                        </div>
                    </div>
                </Authorizing>
                <NotAuthorized>
                    @if (context.User.Identity?.IsAuthenticated ?? false)
                    {
                        <div class="app-error-container">
                            <div class="app-error-content">
                                <div class="app-error-icon">üîí</div>
                                <h3 class="app-error-title">Access Denied</h3>
                                <p class="app-error-text">You don't have permission to access this page.</p>
                                <button class="app-error-button" @onclick="NavigateToHome">
                                    Return to Home
                                </button>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="app-error-container">
                            <div class="app-error-content">
                                <div class="app-error-icon">üîê</div>
                                <h3 class="app-error-title">Sign In Required</h3>
                                <p class="app-error-text">Please sign in to access this page.</p>
                                <button class="app-error-button" @onclick="NavigateToSignIn">
                                    Sign In
                                </button>
                            </div>
                        </div>
                    }
                </NotAuthorized>
            </AuthorizeRouteView>
            <FocusOnNavigate RouteData="@routeData" Selector="h1" />
        </Found>
        <NotFound>
            <PageTitle>Not found</PageTitle>
            <LayoutView Layout="@typeof(MainLayout)">
                <div class="app-error-container">
                    <div class="app-error-content">
                        <div class="app-error-icon">üîç</div>
                        <h3 class="app-error-title">Page Not Found</h3>
                        <p class="app-error-text">Sorry, we couldn't find the page you're looking for.</p>
                        <button class="app-error-button" @onclick="NavigateToHome">
                            Return to Home
                        </button>
                    </div>
                </div>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>

@code {
    private bool isFirstRender = true;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && isFirstRender)
        {
            isFirstRender = false;
            
            try
            {
                // Wait a tiny bit to ensure DOM is fully rendered
                await Task.Delay(100);
                
                // Hide loading screen - this prevents white flash
                await JSRuntime.InvokeVoidAsync("loadingScreen.complete");
                
                Logger.LogInformation("‚úì App rendered, loading screen hidden");
            }
            catch (Exception ex)
            {
                Logger.LogError(ex, "Error hiding loading screen");
            }
        }
    }

    private void NavigateToHome()
    {
        NavigationManager.NavigateTo("", forceLoad: false);
    }

    private void NavigateToSignIn()
    {
        var returnUrl = NavigationManager.Uri.Replace(NavigationManager.BaseUri, "");
        if (!string.IsNullOrEmpty(returnUrl) && returnUrl != "/")
        {
            var encodedReturnUrl = Uri.EscapeDataString(returnUrl);
            NavigationManager.NavigateTo($"signin?returnUrl={encodedReturnUrl}", forceLoad: false);
        }
        else
        {
            NavigationManager.NavigateTo("signin", forceLoad: false);
        }
    }

    public void Dispose()
    {
        // No cleanup needed
    }
}