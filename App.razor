@* App.razor - FIXED OAUTH CALLBACK HANDLER *@
@using Microsoft.AspNetCore.Components.Authorization
@using SubashaVentures.Services.Supabase
@using SubashaVentures.Services.Storage
@using System.Security.Claims
@implements IDisposable
@inject ISupabaseAuthService AuthService
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager NavigationManager
@inject IBlazorAppLocalStorageService LocalStorage
@inject IJSRuntime JSRuntime
@inject ILogger<App> Logger

<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(App).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <Authorizing>
                    <div class="app-loading-container">
                        <div class="app-loading-content">
                            <div class="app-spinner"></div>
                            <h3 class="app-loading-title">Authorizing</h3>
                            <p class="app-loading-text">Please wait while we verify your credentials...</p>
                        </div>
                    </div>
                </Authorizing>
                <NotAuthorized>
                    @if (context.User.Identity?.IsAuthenticated ?? false)
                    {
                        <div class="app-error-container">
                            <div class="app-error-content">
                                <div class="app-error-icon">üîí</div>
                                <h3 class="app-error-title">Access Denied</h3>
                                <p class="app-error-text">You don't have permission to access this page.</p>
                                <button class="app-error-button" @onclick="NavigateToHome">
                                    Return to Home
                                </button>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="app-error-container">
                            <div class="app-error-content">
                                <div class="app-error-icon">üîê</div>
                                <h3 class="app-error-title">Sign In Required</h3>
                                <p class="app-error-text">Please sign in to access this page.</p>
                                <button class="app-error-button" @onclick="NavigateToSignIn">
                                    Sign In
                                </button>
                            </div>
                        </div>
                    }
                </NotAuthorized>
            </AuthorizeRouteView>
            <FocusOnNavigate RouteData="@routeData" Selector="h1" />
        </Found>
        <NotFound>
            <PageTitle>Not found</PageTitle>
            <LayoutView Layout="@typeof(MainLayout)">
                <div class="app-error-container">
                    <div class="app-error-content">
                        <div class="app-error-icon">üîç</div>
                        <h3 class="app-error-title">Page Not Found</h3>
                        <p class="app-error-text">Sorry, we couldn't find the page you're looking for.</p>
                        <button class="app-error-button" @onclick="NavigateToHome">
                            Return to Home
                        </button>
                    </div>
                </div>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>

@code {
    private DotNetObjectReference<App>? _dotNetReference;

    protected override async Task OnInitializedAsync()
    {
        _dotNetReference = DotNetObjectReference.Create(this);
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            try
            {
                // Register OAuth callback listener
                await JSRuntime.InvokeVoidAsync("eval", @"
                    window.addEventListener('supabase-auth-success', async function(event) {
                        console.log('üéâ Blazor received auth success event');
                        
                        const redirectTo = sessionStorage.getItem('post_oauth_redirect') || '/';
                        sessionStorage.removeItem('post_oauth_redirect');
                        
                        console.log('Redirecting to:', redirectTo);
                        
                        if (window.blazorAuthCallback) {
                            window.blazorAuthCallback.invokeMethodAsync('OnAuthSuccess', redirectTo);
                        }
                    });
                    
                    window.addEventListener('supabase-auth-change', function(event) {
                        console.log('üîî Blazor received auth change:', event.detail.event);
                        
                        if (window.blazorAuthCallback) {
                            window.blazorAuthCallback.invokeMethodAsync('OnAuthStateChanged');
                        }
                    });
                ");

                await JSRuntime.InvokeVoidAsync("eval", $"window.blazorAuthCallback = {_dotNetReference}");

                Logger.LogInformation("‚úÖ OAuth event listeners registered");
            }
            catch (Exception ex)
            {
                Logger.LogError(ex, "Failed to register OAuth event listeners");
            }
        }
    }

    [JSInvokable]
    public async Task OnAuthSuccess(string redirectUrl)
    {
        try
        {
            Logger.LogInformation("üéØ OnAuthSuccess called with redirect: {RedirectUrl}", redirectUrl);

            // ‚úÖ CRITICAL: Force auth state refresh
            if (AuthStateProvider is SupabaseAuthStateProvider provider)
            {
                await provider.RefreshAuthenticationStateAsync();
                Logger.LogInformation("‚úÖ Auth state refreshed");
            }

            // Small delay to ensure state is updated
            await Task.Delay(500);

            // Navigate
            NavigationManager.NavigateTo(redirectUrl, forceLoad: false);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error in OnAuthSuccess");
        }
    }

    [JSInvokable]
    public async Task OnAuthStateChanged()
    {
        try
        {
            Logger.LogInformation("üîÑ OnAuthStateChanged called");

            if (AuthStateProvider is SupabaseAuthStateProvider provider)
            {
                provider.NotifyAuthenticationStateChanged();
                Logger.LogInformation("‚úÖ Auth state change notified");
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error in OnAuthStateChanged");
        }
    }

    private void NavigateToHome()
    {
        NavigationManager.NavigateTo("/", forceLoad: false);
    }

    private void NavigateToSignIn()
    {
        var returnUrl = NavigationManager.Uri.Replace(NavigationManager.BaseUri, "/");
        var encodedReturnUrl = Uri.EscapeDataString(returnUrl);
        NavigationManager.NavigateTo($"/signin?returnUrl={encodedReturnUrl}", forceLoad: false);
    }

    public void Dispose()
    {
        _dotNetReference?.Dispose();
    }
}
