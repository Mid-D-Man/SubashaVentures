@page "/user/payment"
@layout UserLayout
@using SubashaVentures.Components.Shared.Buttons
@using SubashaVentures.Components.Shared.Modals
@using SubashaVentures.Components.Shared.Loading
@using SubashaVentures.Layout.User

<PageTitle>Payment & Wallet - SubashaVentures</PageTitle>

<div class="payment-page">
    <div class="page-header">
        <div class="header-content">
            <h1 class="page-title">Payment & Wallet</h1>
            <p class="page-subtitle">Manage your payment methods and wallet balance</p>
        </div>
        <div class="header-actions">
            <PrimaryButton OnClick="OpenAddPaymentModal"
                           Icon="+"
                           Size="PrimaryButton.ButtonSize.Medium"
                           CssClass="btn-add-payment">
                Add Card
            </PrimaryButton>
        </div>
    </div>

    @if (IsLoading)
    {
        <div class="payment-loading">
            <LoadingSpinner Size="LoadingSpinner.SpinnerSize.Large"
                            Message="Loading your payment information..." />
        </div>
    }
    else
    {
        <!-- Wallet Balance Card -->
        <div class="wallet-section">
            <div class="wallet-card">
                <div class="wallet-card-header">
                    <div class="wallet-icon-wrapper">
                        <span class="wallet-icon">üí≥</span>
                    </div>
                    <div class="wallet-info">
                        <span class="wallet-label">Available Balance</span>
                        <h2 class="wallet-balance">@WalletBalance</h2>
                        <span class="wallet-currency">Nigerian Naira (NGN)</span>
                    </div>
                </div>
                <div class="wallet-card-actions">
                    <PrimaryButton OnClick="ShowTopUpModal"
                                   Size="PrimaryButton.ButtonSize.Medium"
                                   CssClass="btn-topup">
                        Top Up Wallet
                    </PrimaryButton>
                    <SecondaryButton OnClick="ShowTransactionHistory"
                                     Variant="SecondaryButton.ButtonVariant.Outline"
                                     Size="SecondaryButton.ButtonSize.Medium"
                                     CssClass="btn-history">
                        View History
                    </SecondaryButton>
                </div>
            </div>
        </div>

        <!-- Payment Methods Section -->
        <div class="payment-methods-section">
            <div class="section-header">
                <h3 class="section-title">Saved Payment Methods</h3>
                @if (PaymentMethods.Any())
                {
                    <span class="section-count">@PaymentMethods.Count card@(PaymentMethods.Count != 1 ? "s" : "")</span>
                }
            </div>

            @if (!PaymentMethods.Any())
            {
                <div class="empty-state">
                    <div class="empty-icon">üí≥</div>
                    <h3 class="empty-title">No Payment Methods</h3>
                    <p class="empty-description">Add a payment method for faster and more secure checkout</p>
                    <PrimaryButton OnClick="OpenAddPaymentModal"
                                   Size="PrimaryButton.ButtonSize.Large"
                                   CssClass="btn-add-first">
                        Add Your First Card
                    </PrimaryButton>
                </div>
            }
            else
            {
                <div class="payment-methods-grid">
                    @foreach (var method in PaymentMethods)
                    {
                        <div class="payment-card @(method.IsDefault ? "default-card" : "") @(method.IsExpired ? "expired-card" : "")">
                            @if (method.IsDefault)
                            {
                                <span class="default-badge">
                                    <span class="badge-icon">‚≠ê</span>
                                    <span class="badge-text">Default</span>
                                </span>
                            }

                            @if (method.IsExpired)
                            {
                                <span class="expired-badge">
                                    <span class="badge-icon">‚ö†Ô∏è</span>
                                    <span class="badge-text">Expired</span>
                                </span>
                            }

                            <div class="card-header">
                                <div class="card-type-icon">
                                    @method.CardIcon
                                </div>
                                <span class="card-provider">@method.ProviderDisplay</span>
                            </div>

                            <div class="card-body">
                                <h4 class="card-type">@method.CardType</h4>
                                <p class="card-number">@method.MaskedCardNumber</p>
                                <div class="card-details">
                                    <span class="card-expiry">Exp: @method.ExpiryDate</span>
                                    @if (!string.IsNullOrEmpty(method.CardBank))
                                    {
                                        <span class="card-bank">@method.CardBank</span>
                                    }
                                </div>
                            </div>

                            <div class="card-actions">
                                @if (!method.IsDefault && !method.IsExpired)
                                {
                                    <button class="btn-icon btn-icon-primary"
                                            @onclick="() => SetDefaultPayment(method.Id)"
                                            title="Set as default"
                                            aria-label="Set as default payment method">
                                        ‚≠ê
                                    </button>
                                }
                                <button class="btn-icon btn-icon-danger"
                                        @onclick="() => ConfirmDeletePayment(method.Id)"
                                        title="Remove card"
                                        aria-label="Remove payment method">
                                    üóëÔ∏è
                                </button>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>

        <!-- Recent Transactions Section -->
        <div class="transactions-section">
            <div class="section-header">
                <h3 class="section-title">Recent Transactions</h3>
                @if (Transactions.Any())
                {
                    <button class="btn-link" @onclick="ShowAllTransactions">
                        View All
                    </button>
                }
            </div>

            @if (!Transactions.Any())
            {
                <div class="empty-transactions">
                    <div class="empty-icon-small">üìä</div>
                    <p class="empty-text">No transactions yet</p>
                    <p class="empty-hint">Your transaction history will appear here</p>
                </div>
            }
            else
            {
                <div class="transactions-list">
                    @foreach (var transaction in Transactions.Take(5))
                    {
                        <div class="transaction-item">
                            <div class="transaction-icon @transaction.Type.ToLower()">
                                <span class="icon-symbol">@(transaction.Type == "credit" || transaction.Type == "topup" || transaction.Type == "refund" ? "+" : "-")</span>
                            </div>
                            <div class="transaction-info">
                                <h4 class="transaction-title">@transaction.Description</h4>
                                <div class="transaction-meta">
                                    <span class="transaction-date">@transaction.TimeAgo</span>
                                    <span class="transaction-ref">Ref: @transaction.Reference</span>
                                </div>
                            </div>
                            <div class="transaction-amount @transaction.Type.ToLower()">
                                <span class="amount-symbol">@(transaction.Type == "credit" || transaction.Type == "topup" || transaction.Type == "refund" ? "+" : "-")</span>
                                <span class="amount-value">@transaction.FormattedAmount</span>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    }
</div>

<!-- Add Payment Method Modal -->
<DynamicModal @ref="AddPaymentModal"
              Title="Add Payment Method"
              Size="DynamicModal.ModalSize.Medium"
              IsOpen="@IsAddPaymentModalOpen"
              OnConfirm="SavePaymentMethod"
              OnCancel="CloseAddPaymentModal"
              ConfirmText="Add Card via Paystack"
              IsProcessing="@IsSaving"
              ShowCancelButton="true">
    <BodyContent>
        <div class="payment-form">
            <div class="form-notice">
                <span class="notice-icon">üîí</span>
                <div class="notice-content">
                    <p class="notice-title">Secure Card Storage</p>
                    <p class="notice-text">
                        Click "Add Card via Paystack" to securely enter your card details.
                        We never see or store your full card information.
                        A small verification charge of ‚Ç¶50 will be made and can be refunded upon request.
                    </p>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(ValidationErrors.GetValueOrDefault("General")))
            {
                <div class="form-error">
                    <span class="error-icon">‚ö†Ô∏è</span>
                    <span class="error-text">@ValidationErrors["General"]</span>
                </div>
            }

            <div class="form-info-box">
                <h4 class="info-title">How it works:</h4>
                <ol class="info-list">
                    <li>Click the button below to open Paystack's secure payment modal</li>
                    <li>Enter your card details in the modal</li>
                    <li>We'll charge ‚Ç¶50 to verify your card</li>
                    <li>Your card will be securely saved for future purchases</li>
                    <li>You can request a refund of the ‚Ç¶50 verification charge</li>
                </ol>
            </div>

            <div class="form-checkbox">
                <label class="checkbox-label">
                    <input type="checkbox"
                           class="checkbox-input"
                           @bind="SetAsDefault" />
                    <span class="checkbox-text">Set as default payment method</span>
                </label>
            </div>
        </div>
    </BodyContent>
</DynamicModal>

<!-- Top Up Modal -->
<DynamicModal @ref="TopUpModal"
              Title="Top Up Wallet"
              Size="DynamicModal.ModalSize.Small"
              IsOpen="@IsTopUpModalOpen"
              OnConfirm="ProcessTopUp"
              OnCancel="CloseTopUpModal"
              ConfirmText="Proceed to Payment"
              IsProcessing="@IsProcessing"
              ShowCancelButton="true">
    <BodyContent>
        <div class="topup-form">
            <div class="current-balance-info">
                <span class="balance-label">Current Balance</span>
                <span class="balance-value">@WalletBalance</span>
            </div>

            <div class="form-field">
                <label class="field-label">Top-Up Amount</label>
                <div class="input-wrapper">
                    <span class="input-prefix">‚Ç¶</span>
                    <input type="number"
                           class="field-input"
                           placeholder="Enter amount"
                           min="1000"
                           step="100"
                           @bind="TopUpAmount" />
                </div>
                <span class="field-helper">Minimum: ‚Ç¶1,000</span>
            </div>

            <div class="quick-amounts">
                <span class="quick-amounts-label">Quick amounts:</span>
                <div class="quick-amounts-grid">
                    <button class="quick-amount-btn"
                            type="button"
                            @onclick='() => TopUpAmount = "5000"'>
                        ‚Ç¶5,000
                    </button>
                    <button class="quick-amount-btn"
                            type="button"
                            @onclick='() => TopUpAmount = "10000"'>
                        ‚Ç¶10,000
                    </button>
                    <button class="quick-amount-btn"
                            type="button"
                            @onclick='() => TopUpAmount = "20000"'>
                        ‚Ç¶20,000
                    </button>
                    <button class="quick-amount-btn"
                            type="button"
                            @onclick='() => TopUpAmount = "50000"'>
                        ‚Ç¶50,000
                    </button>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(TopUpAmount) && decimal.TryParse(TopUpAmount, out decimal amt) && amt >= 1000)
            {
                <div class="topup-summary">
                    <div class="summary-row">
                        <span class="summary-label">Amount to add:</span>
                        <span class="summary-value">‚Ç¶@amt.ToString("N0")</span>
                    </div>
                    <div class="summary-row summary-total">
                        <span class="summary-label">New balance:</span>
                        <span class="summary-value">‚Ç¶@((CurrentBalance + amt).ToString("N0"))</span>
                    </div>
                </div>
            }
        </div>
    </BodyContent>
</DynamicModal>

<!-- Delete Confirmation -->
<ConfirmationPopup @ref="DeleteConfirmPopup"
                   Title="Remove Payment Method"
                   Message="Are you sure you want to remove this payment method? This action cannot be undone."
                   Variant="ConfirmationPopup.ConfirmationVariant.Danger"
                   ConfirmButtonText="Remove Card"
                   CancelButtonText="Keep Card"
                   OnConfirm="ConfirmDeletePaymentMethod" />

