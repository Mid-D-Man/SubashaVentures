<!-- Variant Management Modal -->
<DynamicModal @ref="variantModal"
              Title="@(isEditingVariant ? "Edit Variant" : "Add Variant")"
              Size="DynamicModal.ModalSize.Large"
              IsOpen="@isVariantModalOpen"
              ShowFooter="false"
              IsScrollable="true"
              OnClose="CloseVariantModal">
    <BodyContent>
        <div class="variant-form">
            <!-- Variant Identification -->
            <div class="form-section">
                <h3 class="section-title">Variant Details</h3>
                
                <div class="form-group">
                    <label class="form-label">Variant SKU *</label>
                    <input type="text" 
                           class="form-input"
                           @bind="variantForm.Sku"
                           @bind:event="oninput"
                           placeholder="PROD-VARIANT-001" />
                    <span class="helper-text">Unique identifier for this variant</span>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label class="form-label">Size</label>
                        <input type="text" 
                               class="form-input"
                               @bind="variantForm.Size"
                               @bind:event="oninput"
                               placeholder="e.g., M, L, XL" />
                    </div>

                    <div class="form-group">
                        <label class="form-label">Color</label>
                        <input type="text" 
                               class="form-input"
                               @bind="variantForm.Color"
                               @bind:event="oninput"
                               placeholder="e.g., Red, Blue" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label">Color Hex Code</label>
                    <div class="color-input-group">
                        <input type="text" 
                               class="form-input color-input"
                               @bind="variantForm.ColorHex"
                               @bind:event="oninput"
                               placeholder="#FF0000" />
                        @if (!string.IsNullOrEmpty(variantForm.ColorHex))
                        {
                            <div class="color-preview" style="background: @variantForm.ColorHex"></div>
                        }
                    </div>
                    <span class="helper-text">Optional: Hex color code for visual display</span>
                </div>
            </div>

            <!-- Stock & Pricing -->
            <div class="form-section">
                <h3 class="section-title">Stock & Pricing</h3>
                
                <div class="form-row">
                    <div class="form-group">
                        <label class="form-label">Stock Quantity *</label>
                        <input type="number" 
                               class="form-input"
                               @bind="variantForm.Stock"
                               @bind:event="oninput"
                               placeholder="0"
                               min="0" />
                    </div>

                    <div class="form-group">
                        <label class="form-label">Price Adjustment (‚Ç¶)</label>
                        <input type="number" 
                               class="form-input"
                               @bind="variantForm.PriceAdjustment"
                               @bind:event="oninput"
                               placeholder="0.00"
                               step="0.01" />
                        <span class="helper-text">Add to or subtract from base price</span>
                    </div>
                </div>

                @if (variantForm.PriceAdjustment != 0)
                {
                    <div class="price-calculation">
                        Base Price: ‚Ç¶@productForm.Price.ToString("N0") + Adjustment: ‚Ç¶@variantForm.PriceAdjustment.ToString("N0") 
                        = <strong>‚Ç¶@((productForm.Price + variantForm.PriceAdjustment).ToString("N0"))</strong>
                    </div>
                }
            </div>

            <!-- Dimensions & Weight -->
            <div class="form-section">
                <h3 class="section-title">Dimensions & Weight</h3>
                
                <div class="form-group">
                    <label class="form-label">Weight (kg)</label>
                    <input type="number" 
                           class="form-input"
                           @bind="variantForm.Weight"
                           @bind:event="oninput"
                           placeholder="1.0"
                           step="0.1"
                           min="0" />
                    <span class="helper-text">Leave empty to use base product weight</span>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label class="form-label">Length (cm)</label>
                        <input type="number" 
                               class="form-input"
                               @bind="variantForm.Length"
                               @bind:event="oninput"
                               placeholder="30"
                               step="0.1"
                               min="0" />
                    </div>

                    <div class="form-group">
                        <label class="form-label">Width (cm)</label>
                        <input type="number" 
                               class="form-input"
                               @bind="variantForm.Width"
                               @bind:event="oninput"
                               placeholder="20"
                               step="0.1"
                               min="0" />
                    </div>

                    <div class="form-group">
                        <label class="form-label">Height (cm)</label>
                        <input type="number" 
                               class="form-input"
                               @bind="variantForm.Height"
                               @bind:event="oninput"
                               placeholder="10"
                               step="0.1"
                               min="0" />
                    </div>
                </div>
            </div>

            <!-- Shipping -->
            <div class="form-section">
                <h3 class="section-title">Shipping</h3>
                
                <label class="toggle-switch">
                    <input type="checkbox" @bind="variantForm.HasFreeShipping" />
                    <span class="toggle-slider"></span>
                    <span class="toggle-label">Free Shipping for this variant</span>
                </label>

                @if (!variantForm.HasFreeShipping)
                {
                    <div class="form-group">
                        <label class="form-label">Shipping Cost (‚Ç¶)</label>
                        <input type="number" 
                               class="form-input"
                               @bind="variantForm.ShippingCost"
                               @bind:event="oninput"
                               placeholder="2000"
                               step="100"
                               min="0" />
                        <span class="helper-text">Leave empty to use base shipping cost</span>
                    </div>
                }
            </div>

            <!-- Variant Image -->
            <div class="form-section">
                <h3 class="section-title">Variant Image</h3>
                
                <div class="form-group">
                    <label class="form-label">Image URL</label>
                    <input type="text" 
                           class="form-input"
                           @bind="variantForm.ImageUrl"
                           @bind:event="oninput"
                           placeholder="https://..." />
                    <span class="helper-text">Optional: Specific image for this variant</span>
                </div>

                @if (!string.IsNullOrEmpty(variantForm.ImageUrl))
                {
                    <div class="variant-image-preview">
                        <img src="@variantForm.ImageUrl" alt="Variant image" />
                    </div>
                }
            </div>

            <!-- Availability -->
            <div class="form-section">
                <h3 class="section-title">Availability</h3>
                
                <label class="toggle-switch">
                    <input type="checkbox" @bind="variantForm.IsAvailable" />
                    <span class="toggle-slider"></span>
                    <span class="toggle-label">Variant is available for purchase</span>
                </label>
            </div>

            <!-- Variant Actions -->
            <div class="form-actions">
                <SecondaryButton OnClick="CloseVariantModal"
                                Variant="SecondaryButton.ButtonVariant.Outline"
                                Size="SecondaryButton.ButtonSize.Large">
                    Cancel
                </SecondaryButton>
                <PrimaryButton OnClick="HandleSaveVariant"
                              Size="PrimaryButton.ButtonSize.Large">
                    @(isEditingVariant ? "Update Variant" : "Add Variant")
                </PrimaryButton>
            </div>
        </div>
    </BodyContent>
</DynamicModal>

