<!-- Delete Confirmation Popup -->
<ConfirmationPopup @ref="deleteConfirmationPopup"
                  IsOpen="@showDeleteConfirmation"
                  Title="@(productsToDelete != null ? "Delete Multiple Products?" : "Delete Product?")"
                  Message="@GetDeleteMessage()"
                  WarningText="This action cannot be undone. The product(s) will be moved to trash."
                  Variant="ConfirmationPopup.ConfirmationVariant.Danger"
                  ConfirmButtonText="Delete"
                  CancelButtonText="Cancel"
                  IsProcessing="@isSaving"
                  OnConfirm="@(productsToDelete != null ? ConfirmBulkDelete : ConfirmDeleteProduct)"
                  OnCancel="@(() => { showDeleteConfirmation = false; productToDelete = null; productsToDelete = null; })"
                  OnClose="@(() => { showDeleteConfirmation = false; productToDelete = null; productsToDelete = null; })" />

@code {
    private string GetDeleteMessage()
    {
        if (productsToDelete != null && productsToDelete.Any())
        {
            return $"Are you sure you want to delete {productsToDelete.Count} product(s)?";
        }
        
        if (productToDelete != null)
        {
            return $"Are you sure you want to delete '{productToDelete.Name}'?";
        }
        
        return "Are you sure you want to proceed?";
    }
}