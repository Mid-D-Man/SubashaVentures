@using SubashaVentures.Components.Shared.Buttons
@using SubashaVentures.Domain.Product

<div class="shop-card @CssClass @(IsLoading ? "loading" : "")" 
     @onclick="HandleCardClick"
     @onmouseenter="() => IsHovered = true"
     @onmouseleave="() => IsHovered = false">
    
    <!-- Image Section (70%) -->
    <div class="card-image-wrapper">
        @if (!string.IsNullOrEmpty(Product.Images?.FirstOrDefault()))
        {
            <img src="@Product.Images.First()" 
                 alt="@Product.Name" 
                 class="card-image" 
                 loading="lazy" />
        }
        else
        {
            <div class="card-placeholder">
                <span class="placeholder-icon">üì¶</span>
            </div>
        }
        
        <!-- Badges (Top Left) -->
        <div class="card-badges">
            @if (Product.IsOnSale && Product.Discount > 0)
            {
                <span class="badge badge-sale">-@Product.Discount%</span>
            }
            @if (Product.IsFeatured)
            {
                <span class="badge badge-featured">‚≠ê Featured</span>
            }
        </div>
        
        <!-- Wishlist Button (Top Right) -->
        <button class="wishlist-btn @(IsWishlisted ? "active" : "")" 
                @onclick="HandleWishlistToggle" 
                @onclick:stopPropagation="true" 
                title="@(IsWishlisted ? "Remove from Wishlist" : "Add to Wishlist")">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="@(IsWishlisted ? "currentColor" : "none")" stroke="currentColor" stroke-width="2">
                <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"/>
            </svg>
        </button>
        
        <!-- Out of Stock Overlay -->
        @if (!Product.IsInStock)
        {
            <div class="out-of-stock-overlay">
                <span>Out of Stock</span>
            </div>
        }
    </div>
    
    <!-- Info Section (30%) -->
    <div class="card-info">
        <p class="card-category">@Product.Category</p>
        <h3 class="card-name" title="@Product.Name">@Product.Name</h3>
        
        <!-- Rating -->
        @if (Product.Rating > 0)
        {
            <div class="card-rating">
                <div class="rating-stars">
                    @for (int i = 1; i <= 5; i++)
                    {
                        <span class="star @(i <= Product.Rating ? "filled" : "")">‚òÖ</span>
                    }
                </div>
                <span class="rating-text">(@Product.ReviewCount)</span>
            </div>
        }
        
        <!-- Price -->
        <div class="card-price">
            @if (Product.IsOnSale && Product.OriginalPrice.HasValue)
            {
                <span class="original-price">@Product.DisplayOriginalPrice</span>
            }
            <span class="current-price">@Product.DisplayPrice</span>
        </div>
        
        <!-- Add to Cart Button -->
        <PrimaryButton Size="PrimaryButton.ButtonSize.Small"
                      OnClick="HandleAddToCart"
                      IsDisabled="@(!Product.IsInStock)"
                      CssClass="add-to-cart-btn">
            @(Product.IsInStock ? "Add to Cart" : "Out of Stock")
        </PrimaryButton>
    </div>
</div>

@code {
    [Parameter] public ProductViewModel Product { get; set; } = new();
    [Parameter] public string CssClass { get; set; } = "";
    [Parameter] public bool IsLoading { get; set; }
    [Parameter] public bool IsWishlisted { get; set; }
    [Parameter] public EventCallback<ProductViewModel> OnClick { get; set; }
    [Parameter] public EventCallback<ProductViewModel> OnAddToCart { get; set; }
    [Parameter] public EventCallback<ProductViewModel> OnWishlistToggle { get; set; }

    private bool IsHovered { get; set; }

    private async Task HandleCardClick()
    {
        if (OnClick.HasDelegate)
        {
            await OnClick.InvokeAsync(Product);
        }
    }

    private async Task HandleAddToCart(MouseEventArgs e)
    {
        if (OnAddToCart.HasDelegate && Product.IsInStock)
        {
            await OnAddToCart.InvokeAsync(Product);
        }
    }

    private async Task HandleWishlistToggle(MouseEventArgs e)
    {
        if (OnWishlistToggle.HasDelegate)
        {
            await OnWishlistToggle.InvokeAsync(Product);
        }
    }
}
