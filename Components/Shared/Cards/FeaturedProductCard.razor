@using SubashaVentures.Components.Shared.Buttons
@using SubashaVentures.Domain.Product

<div class="featured-card @CssClass" @onclick="HandleCardClick">
    
    <!-- Image Section (70%) -->
    <div class="featured-image-wrapper">
        @if (!string.IsNullOrEmpty(Product.Images?.FirstOrDefault()))
        {
            <img src="@Product.Images.First()" alt="@Product.Name" class="featured-image" loading="lazy" />
        }
        else
        {
            <div class="featured-placeholder">
                <span class="placeholder-icon">✨</span>
            </div>
        }
        
        <!-- Featured Glow Effect -->
        <div class="featured-glow"></div>
        
        <!-- Badges -->
        <div class="featured-badges">
            <span class="badge badge-featured-special">⭐ Featured</span>
            @if (Product.IsOnSale && Product.Discount > 0)
            {
                <span class="badge badge-sale">-@Product.Discount%</span>
            }
        </div>
        
        <!-- Wishlist Button -->
        <button class="wishlist-btn @(isInWishlist ? "active" : "")" 
                @onclick="HandleWishlistToggle" 
                @onclick:stopPropagation="true">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="@(isInWishlist ? "currentColor" : "none")" stroke="currentColor" stroke-width="2">
                <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"/>
            </svg>
        </button>
    </div>
    
    <!-- Info Section (30%) -->
    <div class="featured-info">
        <p class="featured-category">@Product.Category</p>
        <h3 class="featured-name">@Product.Name</h3>
        
        @if (Product.Rating > 0)
        {
            <div class="featured-rating">
                <div class="rating-stars">
                    @for (int i = 1; i <= 5; i++)
                    {
                        <span class="star @(i <= Product.Rating ? "filled" : "")">★</span>
                    }
                </div>
                <span class="rating-text">(@Product.ReviewCount)</span>
            </div>
        }
        
        <div class="featured-price">
            @if (Product.IsOnSale && Product.OriginalPrice.HasValue)
            {
                <span class="original-price">@Product.DisplayOriginalPrice</span>
            }
            <span class="current-price">@Product.DisplayPrice</span>
        </div>
        
        <PrimaryButton Size="PrimaryButton.ButtonSize.Small"
                      OnClick="HandleViewDetails"
                      CssClass="featured-view-btn">
            View Details
        </PrimaryButton>
    </div>
</div>

@code {
    [Parameter] public ProductViewModel Product { get; set; } = new();
    [Parameter] public string CssClass { get; set; } = "";
    [Parameter] public EventCallback<ProductViewModel> OnClick { get; set; }
    [Parameter] public EventCallback<ProductViewModel> OnViewDetails { get; set; }

    private bool isInWishlist = false;

    private async Task HandleCardClick()
    {
        if (OnClick.HasDelegate)
        {
            await OnClick.InvokeAsync(Product);
        }
    }

    private async Task HandleViewDetails(MouseEventArgs e)
    {
        if (OnViewDetails.HasDelegate)
        {
            await OnViewDetails.InvokeAsync(Product);
        }
    }

    private void HandleWishlistToggle(MouseEventArgs e)
    {
        isInWishlist = !isInWishlist;
    }
}
